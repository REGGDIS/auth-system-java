<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="auth.controller.LoginController"
            prefHeight="400.0" prefWidth="300.0">

    <VBox spacing="15.0" alignment="CENTER" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
        <Label text="Inicio de sesión" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="txtCorreo" promptText="Correo electrónico" />
        <PasswordField fx:id="txtContrasena" promptText="Contraseña" />

        <Button text="Iniciar sesión" onAction="#handleLogin" maxWidth="150" />
        <Button text="¿No tienes cuenta? Regístrate" onAction="#irARegistro" maxWidth="200" />

        <Label fx:id="lblMensaje" textFill="red" />
    </VBox>
</AnchorPane>
