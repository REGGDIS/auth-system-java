<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="auth.controller.RegistroController"
            prefHeight="400.0" prefWidth="380.0">

    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
        <Label text="Registro de Usuario" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="txtNombre" promptText="Nombre completo" />
        <TextField fx:id="txtCorreo" promptText="Correo electrónico" />
        <PasswordField fx:id="txtContrasena" promptText="Contraseña" />

        <Button text="Registrar" onAction="#handleRegistro" maxWidth="150" />
        <Button text="Volver al Login" onAction="#volverAlLogin" maxWidth="150" />

        <Label fx:id="lblMensaje" textFill="red" wrapText="true" />
    </VBox>

</AnchorPane>
